model ClientTransaction {
  id              String   @id @default(uuid())
  clientId        String
  transactionDate DateTime
  deliveryDate    DateTime? // Added for Excel view

  // Container reference
  containerCode String?
  containerMark String?

  // Item details
  particulars String
  billingType String // 'cbm', 'weight', 'flat'
  quantity    Float?
  weight      Float?
  rate        Float?
  sheetName   String?

  // Amounts
  amount  Float
  paid    Float @default(0)
  balance Float

  // Payment details
  paymentMode PaymentMode?
  paymentDate DateTime?
  paymentRef  String?

  // Account transfer
  fromAccount String @default("Main")
  toAccount   String @default("Client")

  // Location/Transportation (from Bifurcation)
  from String? // FROM location
  to   String? // TO location

  // Audit fields - store as strings
  createdBy String?
  updatedBy String?

  // Metadata
  type      TransactionType @default(EXPENSE)
  notes     String?
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt

  client Client @relation(fields: [clientId], references: [id], onDelete: Cascade)
  user   User?  @relation(fields: [userId], references: [id])
  userId Int?

  @@index([clientId, transactionDate])
  @@index([containerCode])
}


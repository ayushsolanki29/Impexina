generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  EMPLOYEE
  NEW_JOINNER
}

enum ActivityType {
  CREATE
  UPDATE
  STATUS_CHANGE
  CALL
  EMAIL
  MEETING
  FILE_UPLOAD
}

model User {
  id       Int    @id @default(autoincrement())
  publicId String @unique @default(uuid())

  username String  @unique
  password String
  name     String
  role     Role    @default(NEW_JOINNER)
  isActive Boolean @default(true)
  isSuper  Boolean @default(false) // Super user cannot be deleted/deactivated/modified

  permissions UserPermission[]

  createdAt                   DateTime                    @default(now())
  updatedAt                   DateTime                    @updatedAt
  packingListActivities       PackingListActivity[]
  commercialInvoiceActivities CommercialInvoiceActivity[]
  summaryActivities           SummaryActivity[]

  // Legacy Task relations (for backward compatibility)
  legacyAssignedTasks Task[] @relation("legacyAssignedTasks")
  legacyCreatedTasks  Task[] @relation("legacyCreatedTasks")

  // New Task Management System relations
  createdTemplates   TaskTemplate[]   @relation("createdTemplates")
  assignedTasks      TaskAssignment[] @relation("assignedTasks")
  createdTasks       TaskAssignment[] @relation("createdTasks")
  taskCompletions    TaskCompletion[] @relation("taskCompletions")

  clientTransactions ClientTransaction[]

  createdOrders OrderTracker[] @relation("createdOrders")
  updatedOrders OrderTracker[] @relation("updatedOrders")

  loadingActivities     LoadingActivity[]
  bifurcationActivities BifurcationActivity[]
  containerActivities   ContainerActivity[]
  invoiceActivities     InvoiceActivity[]
  warehouseActivities   WarehouseActivity[]

  uploadedContainerImages ContainerImage[] @relation("uploadedImages")
  deletedContainerImages  ContainerImage[] @relation("deletedImages")
}

model Module {
  id   Int    @id @default(autoincrement())
  key  String @unique
  name String

  users UserPermission[]
}

model UserPermission {
  id       Int @id @default(autoincrement())
  userId   Int
  moduleId Int

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  module Module @relation(fields: [moduleId], references: [id], onDelete: Cascade)

  @@unique([userId, moduleId])
}

model ShippingMark {
  id     String  @id @default(uuid())
  name   String  @unique // BB-AMD, SMW-INK, RMSZ-M
  source String? // RAJ, YIWU, etc

  createdAt DateTime @default(now())
  client    Client?  @relation(fields: [clientId], references: [id])
  clientId  String?
}

model CtnMark {
  id   String @id @default(uuid())
  name String @unique // EXPRESS, JB-210-211-212-213, etc

  createdAt DateTime @default(now())
  client    Client?  @relation(fields: [clientId], references: [id])
  clientId  String?
}

model Container {
  id            String   @id @default(uuid())
  containerCode String   @unique // PSDH-86
  origin        String // YIWU, RAJ
  loadingDate   DateTime @default(now())
  status        String   @default("OPEN") // OPEN, CLOSED, SHIPPED, etc.

  // Relations
  loadingSheets LoadingSheet[]
  bifurcations  Bifurcation[]
  packingList   PackingList?
  invoice       Invoice?

  // Cached Totals (for efficient filtering/sorting)
  totalCtn    Int   @default(0)
  totalCbm    Float @default(0)
  totalWt     Float @default(0)
  clientCount Int   @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  activities ContainerActivity[]
  warehouses Warehouse[]
  referenceImages ContainerImage[]
}

model LoadingSheet {
  id          String    @id @default(uuid())
  containerId String
  container   Container @relation(fields: [containerId], references: [id], onDelete: Cascade)

  shippingMark String? // Grouping by client/mark (optional for backward compatibility)
  clientName   String?
  clientId     String?
  client       Client?            @relation(fields: [clientId], references: [id])
  status       LoadingSheetStatus @default(DRAFT)

  // Relations
  items      LoadingItem[]
  activities LoadingActivity[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  bifurcation Bifurcation?
  warehouse   Warehouse?

  @@index([containerId])
}

model Bifurcation {
  id           String    @id @default(uuid())
  invoiceNo    String?
  gst          String?
  gstAmount    Float?
  deliveryDate DateTime?
  from         String?
  to           String?
  lrNo         Boolean   @default(false)

  loadingSheetId String       @unique
  loadingSheet   LoadingSheet @relation(fields: [loadingSheetId], references: [id], onDelete: Cascade)

  // For easy querying by container
  containerId String
  container   Container @relation(fields: [containerId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  activities BifurcationActivity[]
}

model Warehouse {
  id           String    @id @default(uuid())
  transporter  String?

  loadingSheetId String       @unique
  loadingSheet   LoadingSheet @relation(fields: [loadingSheetId], references: [id], onDelete: Cascade)

  // For easy querying by container
  containerId String
  container   Container @relation(fields: [containerId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  activities WarehouseActivity[]
}

model WarehouseActivity {
  id            String    @id @default(uuid())
  warehouseId   String
  warehouse     Warehouse @relation(fields: [warehouseId], references: [id], onDelete: Cascade)
  userId        Int
  user          User      @relation(fields: [userId], references: [id])

  type     String // UPDATE, CREATE
  field    String? // invoiceNo, gstAmount, etc.
  oldValue String?
  newValue String?
  details  Json?

  createdAt DateTime @default(now())
}

model ContainerImage {
  id            String    @id @default(uuid())
  containerId   String
  container     Container @relation(fields: [containerId], references: [id], onDelete: Cascade)
  
  imageUrl      String
  fileName      String?
  
  uploadedById  Int
  uploadedBy    User      @relation("uploadedImages", fields: [uploadedById], references: [id])
  
  deletedById   Int?
  deletedBy     User?     @relation("deletedImages", fields: [deletedById], references: [id])
  deletedAt     DateTime?
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([containerId])
}

model BifurcationActivity {
  id            String      @id @default(uuid())
  bifurcationId String
  bifurcation   Bifurcation @relation(fields: [bifurcationId], references: [id], onDelete: Cascade)
  userId        Int
  user          User        @relation(fields: [userId], references: [id])

  type     String // UPDATE, CREATE
  field    String? // invoiceNo, gstAmount, etc.
  oldValue String?
  newValue String?
  details  Json?

  createdAt DateTime @default(now())
}

model LoadingItem {
  id             String       @id @default(uuid())
  loadingSheetId String
  loadingSheet   LoadingSheet @relation(fields: [loadingSheetId], references: [id], onDelete: Cascade)

  photo      String? // Base64 or URL
  particular String
  mark       String? // Item-specific mark (defaults to sheet mark)
  itemNo     String?
  ctn        Int     @default(0)
  pcs        Int     @default(0)
  tPcs       Int     @default(0) // Calculated
  unit       String  @default("PCS")
  cbm        Float   @default(0)
  tCbm       Float   @default(0) // Calculated
  wt         Float   @default(0)
  tWt        Float   @default(0) // Calculated

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@index([loadingSheetId])
}

model ContainerActivity {
  id          String    @id @default(uuid())
  containerId String
  container   Container @relation(fields: [containerId], references: [id], onDelete: Cascade)
  userId      Int
  user        User      @relation(fields: [userId], references: [id])

  type     String // CREATE, UPDATE, DELETE
  field    String?
  oldValue String?
  newValue String?
  details  Json?

  createdAt DateTime @default(now())
}

model LoadingActivity {
  id             String       @id @default(uuid())
  loadingSheetId String
  loadingSheet   LoadingSheet @relation(fields: [loadingSheetId], references: [id], onDelete: Cascade)
  userId         Int
  user           User         @relation(fields: [userId], references: [id])

  type     String? // CREATE, UPDATE, DELETE, STATUS_CHANGE
  field    String?
  oldValue String?
  newValue String?
  details  Json?

  createdAt DateTime @default(now())
}


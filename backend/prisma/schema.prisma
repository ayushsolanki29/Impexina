model ForexEntry {
  id       String   @id @default(cuid())
  sheetId  String
  sheet    ForexSheet @relation(fields: [sheetId], references: [id], onDelete: Cascade)
  
  // Entry data
  date        DateTime
  particulars String
  reference   String?  // Reference number, invoice number, etc.
  
  // Amounts in different currencies
  debitRMB    Float?  @default(0)
  creditRMB   Float?  @default(0)
  debitUSD    Float?  @default(0)
  creditUSD   Float?  @default(0)
  debitEUR    Float?  @default(0)
  creditEUR   Float?  @default(0)
  debitGBP    Float?  @default(0)
  creditGBP   Float?  @default(0)
  debitJPY    Float?  @default(0)
  creditJPY   Float?  @default(0)
  debitOther  Float?  @default(0)
  creditOther Float?  @default(0)
  otherCurrencyCode String?  // For OTHER currency type
  
  // Calculated fields
  rmbBalance  Float   @default(0)  // Debit - Credit
  usdBalance  Float   @default(0)
  eurBalance  Float   @default(0)
  gbpBalance  Float   @default(0)
  jpyBalance  Float   @default(0)
  otherBalance Float  @default(0)
  
  // Metadata
  category    String?  // e.g., "Payment", "Receipt", "Transfer", "Expense"
  notes       String?
  
  // Timestamps
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Audit fields

enum PackingListStatus {
  DRAFT
  CONFIRMED
  PRINTED
  CANCELLED
}

// Company/Bank master table
model CompanyMaster {
  id             String  @id @default(cuid())
  companyName    String  @unique
  companyAddress String
  companyPhone   String?
  companyEmail   String?

  // Bank Details
  bankName        String
  beneficiaryName String
  swiftBic        String
  bankAddress     String
  accountNumber   String

  // Signature/Stamp
  signatureText String? @default("Authorized Signatory")
  stampImage    String? // Base64 or URL

  packingLists PackingList[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model PackingList {
  id            String @id @default(cuid())
  containerCode String @unique
  invNo         String @unique

  // Header Information (now editable)
  headerCompanyName    String?
  headerCompanyAddress String?
  headerPhone          String?

  // Seller Information (now editable)
  sellerCompanyName String?
  sellerAddress     String?
  sellerIecNo       String?
  sellerGst         String?
  sellerEmail       String?

  // Invoice Information
  invoiceNo   String?
  invoiceDate DateTime?
  from        String?
  to          String?
  lrNo        String?

  // Company/Bank Details (editable)
  bankName        String?
  beneficiaryName String?
  swiftBic        String?
  bankAddress     String?
  accountNumber   String?

  // Stamp/Position Settings
  stampImage    String? // Base64 or URL
  stampPosition String? @default("BOTTOM_RIGHT") // BOTTOM_LEFT, BOTTOM_CENTER, BOTTOM_RIGHT
  stampText     String? @default("Authorized Signatory")

  // Status
  status PackingListStatus @default(DRAFT)

  // Totals
  totalCtn    Int   @default(0)
  totalQty    Int   @default(0)
  totalWeight Float @default(0)

  // MIX/HSN Settings
  showMixColumn Boolean @default(true)
  showHsnColumn Boolean @default(true)

  // Relations
  items      PackingListItem[]
  activities PackingListActivity[]

  // Metadata
  createdBy       String
  updatedBy       String
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  companyMaster   CompanyMaster? @relation(fields: [companyMasterId], references: [id])
  companyMasterId String?
}

model PackingListItem {
  id            String  @id @default(cuid())
  packingListId String
  itemNumber    String
  particular    String
  ctn           Int
  qtyPerCtn     Int
  unit          String  @default("PCS")
  tQty          Int
  kg            Float
  tKg           Float
  mix           String? // MIX value
  hsn           String? // HSN value
  photo         String? // Base64 or URL

  packingList PackingList @relation(fields: [packingListId], references: [id], onDelete: Cascade)
  createdAt   DateTime    @default(now())
}

model PackingListActivity {
  id            String  @id @default(cuid())
  packingListId String
  userId        Int
  type          String // CREATED, UPDATED, STATUS_CHANGE, PRINTED, FIELDS_CHANGED, etc.
  field         String? // Which field was changed
  oldValue      String?
  newValue      String?
  note          String?
  ipAddress     String?
  userAgent     String?

  user        User        @relation(fields: [userId], references: [id])
  packingList PackingList @relation(fields: [packingListId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}


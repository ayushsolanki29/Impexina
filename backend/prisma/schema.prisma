  ctn         Int     @default(0)
  product     String?

  // Delivery info
  deliveryDate DateTime?
  invNo        String?
  gstInv       String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  client AccountClient @relation(fields: [clientId], references: [id], onDelete: Cascade)

  @@unique([clientId, containerCode, mark])
  @@index([containerCode])
  @@index([mark])
}


enum CommercialInvoiceStatus {
  DRAFT
  CONFIRMED
  PRINTED
  CANCELLED
}

model CommercialInvoice {
  id            String @id @default(cuid())
  containerCode String @unique
  invoiceNo     String @unique

  // Header Information
  companyName    String?
  companyAddress String?
  title          String? @default("COMMERCIAL INVOICE")

  // Buyer Information
  buyerName    String?
  buyerAddress String?
  buyerIEC     String?
  buyerGST     String?
  buyerEmail   String?

  // Invoice Information
  invoiceDate DateTime?
  from        String?
  to          String?
  cifText     String?

  // Bank Details
  bankDetail String?

  // Stamp/Signature
  stampImage    String?
  stampPosition String? @default("BOTTOM_RIGHT")
  stampText     String? @default("Authorized Signatory")

  // Status
  status CommercialInvoiceStatus @default(DRAFT)

  // Totals
  totalCtn    Int   @default(0)
  totalQty    Int   @default(0)
  totalAmount Float @default(0)

  // Relations
  items      CommercialInvoiceItem[]
  activities CommercialInvoiceActivity[]

  // Metadata
  createdBy String
  updatedBy String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CommercialInvoiceItem {
  id          String  @id @default(cuid())
  invoiceId   String
  itemNumber  String
  description String
  ctn         Int
  qtyPerCtn   Int
  unit        String  @default("PCS")
  tQty        Int
  unitPrice   Float
  amountUsd   Float
  photo       String?
  fromPerson  String? // FROM field
  toPerson    String? // TO field

  invoice   CommercialInvoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  createdAt DateTime          @default(now())
}

model CommercialInvoiceActivity {
  id        String  @id @default(cuid())
  invoiceId String
  userId    Int
  type      String
  field     String?
  oldValue  String?
  newValue  String?
  note      String?

  user    User              @relation(fields: [userId], references: [id])
  invoice CommercialInvoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}

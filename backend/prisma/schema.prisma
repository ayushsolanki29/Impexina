enum BifurcationStatus {
  PENDING
  DRAFT
  COMPLETED
  CANCELLED
}

model BifurcationContainer {
  id            String    @id @default(cuid())
  containerCode String    @unique
  origin        String?
  loadingDate   DateTime?

  // New bifurcation fields
  status      BifurcationStatus @default(DRAFT)
  totalCTN    Int               @default(0)
  totalCBM    Float             @default(0)
  totalWeight Float             @default(0)
  clientCount Int               @default(0)
  sheetCount  Int               @default(0)

  // Custom fields added by user
  deliveryDate DateTime?
  invNo        String?
  gst          String?
  from         String?
  to           String?
  lr           String? // LR number
  note         String?

  // Relations
  clients    BifurcationClient[]
  items      BifurcationItem[]
  activities BifurcationActivity[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model BifurcationClient {
  id            String @id @default(cuid())
  containerCode String
  clientName    String

  // From loading sheet
  loadingDate DateTime?
  ctn         Int       @default(0)
  product     String?
  totalCBM    Float     @default(0)
  totalWeight Float     @default(0)

  // New fields for bifurcation
  deliveryDate DateTime?
  invNo        String?
  gst          String?
  from         String?
  to           String?
  lr           String?
  status       String    @default("draft")

  // Relations
  container BifurcationContainer @relation(fields: [containerCode], references: [containerCode], onDelete: Cascade)
  items     BifurcationItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([containerCode, clientName])
}

model BifurcationItem {
  id            String @id @default(cuid())
  clientId      String
  containerCode String

  // Item details from loading sheet
  particular String
  ctnMark    String
  ctn        Int
  pcs        Int
  cbm        Float
  weight     Float
  unit       String  @default("PCS")
  photo      String?

  // Relations
  client    BifurcationClient    @relation(fields: [clientId], references: [id], onDelete: Cascade)
  container BifurcationContainer @relation(fields: [containerCode], references: [containerCode], onDelete: Cascade)

  createdAt DateTime @default(now())
}

model BifurcationActivity {
  id            String @id @default(cuid())
  containerCode String
  userId        Int

  type     String
  oldValue Json?
  newValue Json?
  note     String?

  user      User                 @relation(fields: [userId], references: [id])
  container BifurcationContainer @relation(fields: [containerCode], references: [containerCode], onDelete: Cascade)

  createdAt DateTime @default(now())
}

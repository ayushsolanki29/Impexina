model PackingListItem {
  id            String  @id @default(uuid())
  packingListId String
  itemNumber    String
  particular    String
  ctn           Int
  qtyPerCtn     Int
  unit          String  @default("PCS")
  tQty          Int
  kg            Float
  tKg           Float
  mix           String? // MIX value
  hsn           String? // HSN value
  photo         String? // Base64 or URL

  packingList PackingList @relation(fields: [packingListId], references: [id], onDelete: Cascade)
  createdAt   DateTime    @default(now())
}

model PackingListActivity {
  id            String  @id @default(uuid())
  packingListId String
  userId        Int
  type          String // CREATED, UPDATED, STATUS_CHANGE, PRINTED, FIELDS_CHANGED, etc.
  field         String? // Which field was changed
  oldValue      String?
  newValue      String?
  note          String?
  ipAddress     String?
  userAgent     String?

  user        User        @relation(fields: [userId], references: [id])
  packingList PackingList @relation(fields: [packingListId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}


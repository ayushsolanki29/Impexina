model AccountClient {
  id       String  @id @default(cuid())
  name     String
  location String?
  phone    String?
  email    String?
  gst      String?
  pan      String?

  // Balance tracking
  totalExpense Float @default(0)
  totalPaid    Float @default(0)
  balance      Float @default(0)

  // Audit fields - store as strings for simplicity
  createdBy String? // Store username or user ID as string
  updatedBy String? // Store username or user ID as string

  // Metadata
  lastActive DateTime?
  isActive   Boolean   @default(true)
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  // Relations
  transactions ClientTransaction[]
  containers   ClientContainerLink[]

  // Optional: If you want to track which user created/owns this client
  userId Int? // Optional foreign key to User
  user   User? @relation(fields: [userId], references: [id])

  @@unique([name, location])
  @@index([userId])
}

model ClientTransaction {
  id              String   @id @default(cuid())
  clientId        String
  transactionDate DateTime

  // Container reference
  containerCode String?
  containerMark String?

  // Item details
  particulars String
  billingType String // 'cbm', 'weight', 'flat'
  quantity    Float?
  rate        Float?

  // Amounts
  amount  Float
  paid    Float @default(0)
  balance Float

  // Payment details
  paymentMode PaymentMode?
  paymentDate DateTime?
  paymentRef  String?

  // Account transfer
  fromAccount String @default("Main")
  toAccount   String @default("Client")

  // Audit fields - store as strings
  createdBy String?
  updatedBy String?

  // Metadata
  type      TransactionType @default(EXPENSE)
  notes     String?
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt

  client AccountClient @relation(fields: [clientId], references: [id], onDelete: Cascade)
  user   User?         @relation(fields: [userId], references: [id])
  userId Int?

  @@index([clientId, transactionDate])
  @@index([containerCode])
}

model ClientContainerLink {
  id            String @id @default(cuid())
  clientId      String
  containerCode String
  mark          String // Shipping mark

  // From bifurcation
  totalCBM    Float   @default(0)
  totalWeight Float   @default(0)
  ctn         Int     @default(0)
  product     String?

  // Delivery info
  deliveryDate DateTime?
  invNo        String?
  gstInv       String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  client AccountClient @relation(fields: [clientId], references: [id], onDelete: Cascade)

  @@unique([clientId, containerCode, mark])
  @@index([containerCode])
  @@index([mark])
}


